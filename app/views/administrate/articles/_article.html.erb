<div id="<%= dom_id article %>">
  <tr>
    <td> <%= l(article.created_at, format: :short) %></td>
    <td> <%= article.category.name %> </td>
    <td> <%= article.title %> </td>
    <td>
      <div class="icons">
        <%= link_to edit_administrate_article_path(article), title: 'Editar' do %>
          <%= image_tag 'icons/gray/edit.svg' %>
        <% end %>
        <%= link_to [:administrate, article], title: 'Visualizar' do %>
          <%= image_tag 'icons/gray/eye.svg' %>
        <% end %>

        <%= button_to [:administrate, article],class: 'button-transparent',alt: 'close', title: 'Apagar',data: {turbo: false}, method: :delete do %>
          <%= image_tag 'icons/gray/close.svg' %>
        <% end %>
      </div>
    </td>
  </tr>
</div>
